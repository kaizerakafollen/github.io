body
  width 100%
  background-color #000
  font-size 14px
  $FO = 'Fjalla One', sans-serif;
  $if = 'Indie Flower', cursive
  padding 0
  margin 0
.header
  width 80%
  margin 0 auto
  background-color #000
  .logo-main
    float left
    h1
      padding-left 30px
      text-transform uppercase
      font-family 'Fjalla One', sans-serif
      color #fff
    h5
      padding-left 30px
      text-transform capitalize
      font-family 'Indie Flower', cursive
      color #fff
  .nav
    float left
    li
      float right 
      display inline-block
      margin-right 10px
      a
        text-transform uppercase
        
        color #fff
        padding 40px 15px 10px 15px
        transition all 1s
      a:hover
        background #fff
        color #000
        cursor: pointer
.main-text
  padding-top 100px
  padding-bottom 100px
  .container
    .text
      text-align center
      color #fff
      background #000
      padding-bottom 30px
      box-shadow 0 38px 44px -41px #fff
      span
        font-size 150px
        margin-bottom 30px
      .sub-text
        font-family 'Indie Flower', cursive
        font-size 30px
        text-align center
      .pencil
        position absolute
        z-index -1
        right 50%
        // top 285px
      .linear
        position absolute
        z-index -1
        // top 310px
        right: 50%;
        margin-right: -35px;
.main-content
  padding-bottom 100px
  .container
    .row
      .portfolio-caption
        font-family 'Indie Flower', cursive
        font-size 30px
        color #fff
        margin-bottom 30px
      .section-foto 
        text-align center
        .foto
          margin-right 25px
          margin-bottom 25px
.footer
  background #000
  .container
    .row
      .about-author
        position relative
        .author 
          position absolute
          bottom 190px
          padding 10px
          background #fff
          color #fff
        .author-name
          color #fff
          margin-left 180px
          margin-top 20px
          font-family 'Fjalla One', sans-serif
          font-style italic
          font-size 24px
          letter-spacing 2px
        .place
          margin-left 180px
        .name-place 
          margin-left 10px
          display inline-block
          color #fff
          font-size 14px
        .twitter-link
          .twitter
            margin-left 100px
        .dribbble-link
          .dribbble
            margin-left 30px
        .about-author-text
          margin-top 20px
          // width 60%
          color #fff
          font-size 14px
          word-spacing 2px
      .panel-exp
        .my-skill
          margin-top 20px
          color #fff
          font-size 30px
        .skill-panel
          position relative
          display block
          margin-bottom 15px
          width 100%
          background #000
          height 35px
          border-radius 3px
          transition 0.4s linear
          transition-property width, background-color
          .skill-panel-title
            position absolute
            top 0
            left 0
            width 90px
            color #fff
            background #000
            // border-top-left-radius:3px;
            // border-bottom-left-radius:3px;
            span
              display block
              background:rgba(0, 0, 0, 0.1);
              padding:0 20px;
              height:35px;
              line-height:35px;
              border-top-left-radius:3px;
              border-bottom-left-radius:3px;
          .skill-panel-panel
            height 35px
            width 0px
            background #fff
            border-radius 3px
          .skill-panel-percent
            position absolute
            right 10px
            top 0px
            font-size 11px
            height 35px
            line-height 35px
            color #fff
                 
              
            
            
          
        
        
          
      
  
  
        
      
        

        
        